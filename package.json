    "react-relay": ">=1.1.0"
  },
  "lint-staged": {
    "src/**/*.js": [
      "prettier --write --single-quote true --trailing-comma all --print-width 100",
      "git add"
    ]
  },
  "pre-commit": "lint:staged",
  "scripts": {
    "prepublish": "npm run build",
    "test": "jest --coverage --runInBand --forceExit",
